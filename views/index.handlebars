<h1>Burger Eater! bon APPetite</h1>
<div id="burger-container">
  <div id="true">
  <h2>DEVOURED</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div id="eaten">
  <h2>Burgers to be eaten</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
  </div>
</div>
<div id="create-div">
  <h2>Munch a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bu">What kind of burger?</label>
      <input type="text" id="bu" name="burger_name">
    </div>

    <button type="submit">Order your burger!</button>
  </form>
</div>
